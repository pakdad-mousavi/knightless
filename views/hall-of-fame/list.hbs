<div class="container px-4 py-20 mx-auto font-sans">
  <form action="/hall-of-fame" method="post">
    <section class="section-container">
      {{!-- Main title section --}}
      <div class="mb-20 space-y-8">
        <div class="flex items-center justify-center sm:gap-x-5 md:gap-x-10 xl:gap-x-15">
          <div class="w-1/3">
            <img src="/images/scroll-divider.webp" alt="Fancy Scroll Divider">
          </div>
          <div class="flex-1 w-1/3 font-serif font-bold text-center uppercase">
            <h2 class="mb-4 text-2xl md:text-3xl lg:whitespace-nowrap">Our Hall Of</h2>
            <h1 class="text-4xl md:text-5xl">Fame</h1>
          </div>
          <div class="w-1/3">
            <img src="/images/scroll-divider.webp" alt="Fancy Scroll Divider" class="-scale-x-100">
          </div>
        </div>
        <p class="paragraph">
          Celebrate the legends of chess in our Hall of Fame. Discover the stories, achievements, and timeless
          contributions of the greatest players in history.
        </p>
        <div class="searchbar">
          <span class="text-xl icon-search"></span>
          <input type="text" placeholder="Search For a Top-Rated Player..." name="search"
            value="{{#if options.search}}{{options.search}}{{/if}}">
        </div>
      </div>
    </section>

    <div>
      {{!-- Top players bar --}}
      <div class="flex flex-col mb-4 xl:w-5/6 xl:pl-4 xl:ml-auto gap-y-4">
        <div class="flex flex-col gap-4 md:items-center md:flex-row">
          <h3 class="font-serif text-xl font-bold uppercase">Players</h3>
          <div class="flex flex-wrap items-center gap-4">
            <div class="flex items-center gap-x-4">
              <button type="submit" class="button !px-4 !py-1">Apply</button>
              <button type="reset" class="button !px-4 !py-1">Reset</button>
            </div>
            <div class="flex items-center">
              <div class="bg-white px-2 py-1 rounded-md border-[1px] border-spruce mr-4">
                {{paging.totalRecords}} results
              </div>
              {{#if paging.hasPrev}}
              <a href="/hall-of-fame?page={{sub paging.currentPage 1}}"
                class="bg-white px-3 py-1 rounded-md border-[1px] border-spruce flex gap-x-2 items-center">
                <span class="icon-prev-arrow"></span>
                <span>Prev.</span>
              </a>
              {{else}}
              <div
                class="flex gap-x-2 items-center bg-white px-3 py-1 rounded-md border-[1px] border-gray-400 text-gray-400">
                <span class="icon-prev-arrow"></span>
                <span>Prev.</span>
              </div>
              {{/if}}
              <hr class="w-28 border-[1px] border-spruce">
              {{#if paging.hasNext}}
              <a href="/hall-of-fame?page={{add paging.currentPage 1}}"
                class="bg-white px-3 py-1 rounded-md border-[1px] border-spruce flex gap-x-2 items-center">
                <span>Next</span>
                <span class="icon-next-arrow"></span>
              </a>
              {{else}}
              <div
                class="bg-white px-3 py-1 rounded-md border-[1px] border-gray-400 text-gray-400 flex gap-x-2 items-center">
                <span>Next</span>
                <span class="icon-next-arrow"></span>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{#if options.search}}
      <div class="flex gap-x-2">
        <h3
          class="font-serif text-xl font-bold uppercase max-w-full xl:max-w-[80%] overflow-hidden whitespace-nowrap hidden md:block">
          Search For</h3>
        <h3 class="font-serif text-xl font-bold uppercase max-w-full xl:max-w-[80%] overflow-hidden whitespace-nowrap">
          "{{options.search}}"</h3>
      </div>
      {{/if}}
    </div>

    <div class="flex flex-col items-start justify-center xl:flex-row">
      {{!-- Filters side bar --}}
      <div class="w-full xl:w-[16.6667%] xl:border-r-[1px] xl:border-spruce xl:mb-0 mb-10">
        <div class="grid grid-cols-2 gap-4 py-4 overflow-x-scroll xl:grid-cols-none xl:flex-col xl:gap-0">

          {{!-- Filters title --}}
          <div class="items-center hidden py-2 pr-4 xl:flex">
            <h3 class="flex-1 font-serif text-xl font-bold uppercase">Filters</h3>
            <span class="text-2xl icon-filter"></span>
          </div>
          <hr class="hidden xl:block border-spruce">

          {{!-- Active Filters --}}
          <div
            class="p-4 overflow-hidden transition-all duration-300 bg-white xl:bg-transparent xl:mr-2 xl:w-auto xl:p-0 rounded-xl active-filters filter-panel border-[1px] border-gray-200 xl:border-0">
            <div class="pb-4 xl:py-4">
              <div class="flex items-center h-8 xl:pr-3">
                <h3 class="mr-auto text-gray-500 border-b-[1px] border-gray-500 inline-block">Active Filters</h3>
                <a href="#" class="duration-300 icon-down-arrow"></a>
              </div>
            </div>
            <ul class="h-40 mb-4 overflow-y-scroll">
              {{#each options.playingStyles}}
              {{#if this}}
              <li>
                <a href="#" class="mr-2 font-bold">X</a>
                <span>{{@key}}</span>
              </li>
              {{/if}}
              {{/each}}
              {{#if options.hasBeenChampion}}
              <li>
                <a href="#" class="mr-2 font-bold">X</a>
                <span>Former Champion</span>
              </li>
              {{/if}}
            </ul>
          </div>
          <hr class="hidden xl:block border-spruce">

          {{!-- Playing styles --}}
          <div
            class="p-4 overflow-hidden transition-all duration-300 bg-white xl:bg-transparent xl:mr-2 xl:w-auto xl:p-0 rounded-xl filter-panel border-[1px] border-gray-200 xl:border-0">
            <div class="pb-4 xl:py-4">
              <div class="flex items-center h-8 xl:pr-3">
                <h3 class="mr-auto text-gray-500 border-b-[1px] border-gray-500 inline-block">Playing Styles</h3>
                <a href="#" class="duration-300 icon-down-arrow"></a>
              </div>
            </div>
            <ul class="overflow-y-scroll h-52 xl:h-40">
              {{#each options.playingStyles}}
              <li>
                <input type="checkbox" name="playingStyles" id="{{@key}}" value="{{@key}}" class="mr-2" {{#if
                  this}}checked{{/if}}>
                <label for="{{@key}}">{{@key}}</label>
              </li>
              {{/each}}
            </ul>
          </div>

          {{!-- Peak rating --}}
          <div
            class="p-4 overflow-hidden transition-all duration-300 bg-white xl:bg-transparent xl:mr-2 xl:w-auto xl:p-0 rounded-xl filter-panel border-[1px] border-gray-200 xl:border-0">
            <div class="pb-4 xl:py-4 xl:pb-6">
              <div class="flex items-center h-8 xl:pr-3">
                <h3 class="mr-auto text-gray-500 border-b-[1px] border-gray-500 inline-block">Peak Rating (elo)</h3>
                <a href="#" class="duration-300 icon-down-arrow"></a>
              </div>
            </div>
            <div class="slider">
              <input type="range" min="2500" max="2900" step="50" value="{{options.ratingA}}" list="detents"
                name="ratingA">
              <input type="range" min="2500" max="2900" step="50" value="{{options.ratingB}}" list="detents"
                name="ratingB">
              <datalist id="detents">
                <option value="2500">
                <option value="2550">
                <option value="2600">
                <option value="2650">
                <option value="2700">
                <option value="2750">
                <option value="2800">
                <option value="2850">
                <option value="2900">
              </datalist>
            </div>
            <p class="text-sm">Range: <span class="ml-2 font-semibold rating-range-values">{{options.ratingA}} -
                {{options.ratingB}}</span></p>
          </div>

          {{!-- Was world champion --}}
          <div
            class="p-4 overflow-hidden transition-all duration-300 bg-white xl:bg-transparent xl:mr-2 xl:w-auto rounded-xl xl:p-0 filter-panel border-[1px] border-gray-200 xl:border-0">
            <div class="pb-4 xl:py-4">
              <div class="flex items-center h-8 xl:pr-3">
                <h3 class="mr-auto text-gray-500 border-b-[1px] border-gray-500 inline-block">Chess Champion</h3>
                <a href="#" class="duration-300 icon-down-arrow"></a>
              </div>
            </div>
            <label class="inline-flex items-center cursor-pointer">
              <input type="checkbox" name="formerChampion" value="Former Champion" {{#if
                options.hasBeenChampion}}checked{{/if}} class="sr-only peer">
              <div
                class="relative w-11 mr-4 h-6 bg-gray-300 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-gray-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-dark-oak">
              </div>
              <span>Former Champion</span>
            </label>
          </div>
        </div>
      </div>
      <div class="w-full xl:w-[83.33333%] xl:pl-4">
        <div class="grid gap-4 md:grid-cols-2">
          {{#each players}}
          <div>
            <a href="/hall-of-fame/{{this.id}}">
              <div class="flex items-center h-48 p-2 bg-white rounded-lg xl:py-4 border-gray-200 border-[1px]">
                <div class="flex items-center gap-x-7 xl:gap-x-4">
                  <div class="flex-1 overflow-hidden">
                    {{#if this.personalDetails.hasBeenChampion}}
                    <span class="text-xs">Won World Chess Champion</span>
                    <hr class="w-2/5 border-[1px] border-dark-oak">
                    {{else}}
                    <span class="text-xs">Peak Rating: <b
                        class="ml-1 font-bold">{{this.personalDetails.peakFideRating}}</b></span>
                    <hr class="w-2/5 border-[1px] border-dark-oak">
                    {{/if}}
                    <div class="my-2 font-serif text-xl font-bold uppercase text-dark-oak">
                      <h4 class="">{{this.personalDetails.firstName}} {{this.personalDetails.lastName}}</h4>
                    </div>
                    <p class="text-sm text-oak line-clamp-4">{{this.earlyLife}}</p>
                  </div>
                  <div class="ml-auto lg:block md:hidden sm:block">
                    <img src="/images/player-images/{{this.id}}.webp"
                      alt="{{this.personalDetails.firstName}} {{this.personalDetails.lastName}}"
                      class="rounded-lg border-[1px] border-spruce w-40 lg:block md:hidden sm:block">
                  </div>
                </div>
              </div>
            </a>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
</div>
</form>
</div>