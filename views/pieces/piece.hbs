<div class="container pt-10 pb-20 mx-auto font-sans">
  <div class="space-y-10">
    {{#with piece}}
    <section class="flex items-center justify-center gap-x-10 lg:gap-x-0 section-container"> {{!-- Section title --}}
      <div class="w-1/5 xl:w-1/6 p-4">
        <img src="/images/piece-images/beta/{{id}}.webp" alt="{{name}}" class="-scale-x-100">
      </div>
      <div class="w-3/5 xl:w-2/3 relative font-serif font-bold text-center uppercase lg:flex-1 text-dark-oak">
        <div class="flex flex-col items-center justify-center">
          <hr class="w-full border-2 md:w-3/4 border-oak">
          <h2 class="px-6 text-3xl -translate-y-1/2 bg-cream">The</h2>
        </div>
        <h1 class="mb-8 text-5xl">{{name}}</h1>
        <hr class="w-full mx-auto border-2 sm:w-4/5 border-oak">
        <h3 class="my-4 text-xl">{{subtitle}}</h3>
        <hr class="w-4/5 mx-auto border-2 sm:w-1/2 border-oak">
      </div>
      <div class="w-1/5 xl:w-1/6 p-4">
        <img src="/images/piece-images/beta/{{id}}.webp" alt="{{name}}">
      </div>
    </section>

    <section class="flex flex-col lg:flex-row gap-y-20 gap-x-10 section-container">
      {{!-- Overview section --}}
      <div class="lg:w-1/2">
        <div class="mb-6 space-y-0.5">
          <span>All About The {{name}}</span>
          <h4 class="font-serif text-lg font-bold uppercase">Overview</h4>
          <hr class="w-5/12 border-[1px] border-oak">
        </div>
        <div class="paragraphs-container !text-dark-oak">
          {{#makeParagraphs overview}}{{/makeParagraphs}}
        </div>
      </div>

      {{!-- main details section --}}
      <div class="lg:w-1/2">
        <div class="mb-6 space-y-0.5">
          <span>How {{name}}s Navigate The Board</span>
          <h4 class="font-serif text-lg font-bold uppercase">Main Details</h4>
          <hr class="w-5/12 border-[1px] border-oak">
        </div>
        <ul class="flex flex-wrap text-lg">
          {{#each mainDetails}}
          <li class="flex w-5/12 xl:w-1/3">
            <div class="flex items-center h-min">
              <span class="mr-4 text-4xl icon-{{this.icon}}"></span>
              <h3 class="font-semibold">{{this.name}}:</h3>
            </div>
          </li>
          <li class="w-7/12 mb-4 xl:w-2/3">{{this.description}}</li>
          {{/each}}
        </ul>
      </div>
    </section>

    {{!-- How to read moves section --}}
    <section class="py-10 section-container bg-dark-oak text-cream">
      <div class="relative mb-4 space-y-2 font-serif font-bold text-center uppercase">
        <h3 class="mb-8 text-3xl">How To</h3>
        <div class="flex flex-col items-center justify-center">
          <hr class="w-full border-2 border-cream">
          <h2 class="px-4 text-4xl -translate-y-1/2 bg-dark-oak">Read Moves</h2>
        </div>
      </div>
      <div class="text-center">
        <p class="paragraph !text-cream mb-8">
          The rest of this page may include some moves and references to certain squares on the chessboard, so if you
          cannot make sense of it, try learning chess notation first!
        </p>
        <a href="/notation" class="button">Chess Notation</a>
      </div>
    </section>

    {{!-- Strengths --}}
    <section class="py-10 section-container">
      <div class="mb-6 space-y-0.5">
        <span>How The {{name}} Excels In Games</span>
        <h4 class="font-serif text-lg font-bold uppercase">Strengths</h4>
        <hr class="w-1/5 border-[1px] border-oak">
      </div>
      <div class="text-lg paragraphs-container !text-dark-oak">
        {{#each strengths}}
        <p class=""><span class="mr-1 font-semibold">{{@key}}:</span> {{this}}</p>
        {{/each}}
      </div>
    </section>

    {{!-- Weaknesses --}}
    <section class="py-20 bg-white section-container">
      <div class="mb-6 space-y-0.5">
        <span>The Drawbacks Of The {{name}}</span>
        <h4 class="font-serif text-lg font-bold uppercase">Weaknesses</h4>
        <hr class="w-1/5 border-[1px] border-oak">
      </div>
      <div class="text-lg paragraphs-container !text-dark-oak">
        {{#each weaknesses}}
        <p class=""><span class="mr-1 font-semibold">{{@key}}:</span> {{this}}</p>
        {{/each}}
      </div>
    </section>

    {{!-- Sample board section --}}
    <section class="py-10 section-container">
      <div class="flex flex-col items-center text-center gap-y-20 lg:flex-row gap-x-10 lg:text-left">
        <div class="lg:w-1/2">
          <div class="mb-8 space-y-0.5">
            <span>Try Moving The {{name}}s</span>
            <h4 class="font-serif text-lg font-bold uppercase">Sample Board</h4>
            <hr class="lg:mx-0 mx-auto w-1/5 lg:w-2/5 border-[1px] border-oak">
          </div>
          <div class="paragraphs-container !text-dark-oak">
            <p>
              Use this sample board to try moving the white pieces across the board and getting a feel for them, as well
              as their movement and range.
            </p>
            <p>
              See the black pawns? Try capturing them all in only <span class="font-semibold">{{sampleBoard.maxMoves}}
                moves.</span> If you can't then don't worry, just press the retry button and try again.
            </p>
          </div>
          <div class="mt-10 {{id}}">
            <a href="#" class="mr-4 button">Retry</a>
            <div class="border-[1px] border-spruce inline-block px-2 py-1 rounded-md bg-white duration-500">
              Moves Used: 0
            </div>
          </div>
        </div>
        <div class="w-full md:w-3/4 lg:w-1/2">
          <div class="w-full aspect-square sample-board" data-board-name="{{id}}" data-fen="{{sampleBoard.fen}}"
            data-max-moves="{{sampleBoard.maxMoves}}"></div>
        </div>
      </div>
    </section>

    {{!-- Strategic uses --}}
    <section class="py-10 section-container">
      <div class="mb-10 space-y-1 text-center">
        <span>How The {{name}} Excels In Games</span>
        <h4 class="font-serif text-lg font-bold uppercase">Strategic Uses</h4>
        <hr class="w-2/5 mx-auto border-[1px] border-oak">
      </div>
      <div class="grid items-center gap-20 justify-items-center lg:justify-start lg:grid-cols-2">
        {{#each strategicUses}}
        <div
          class="{{#if (isEven @index)}}lg:order-{{getOddOrderFromIndex @index}}{{else}}lg:order-{{add (getOddOrderFromIndex @index) 1}}{{/if}}">
          <div class="text-lg text-center lg:text-left">
            <p class="font-serif font-bold uppercase">
              {{@key}}
            </p>
            <hr class="mx-auto lg:mx-0 mb-4 border-[1px] border-dark-oak w-1/5 lg:w-2/5">
            <div class="paragraphs-container !text-dark-oak">
              {{#makeParagraphs this.description}}{{/makeParagraphs}}
            </div>
          </div>
        </div>
        <div
          class="w-11/12 md:w-3/4 lg:w-11/12 {{#if (isEven @index)}}lg:order-{{getEvenOrderFromIndex @index}}{{else}}lg:order-{{sub (getEvenOrderFromIndex @index) 1}}{{/if}}">
          <div class="w-full aspect-square position-board" data-fen="{{this.fen}}"
            data-highlight-squares="{{this.highlightSquares}}"></div>
        </div>
        {{/each}}
      </div>
    </section>

    {{!-- Historical reference section --}}
    <section class="py-10 section-container bg-dark-oak text-cream">
      <div class="relative mb-4 space-y-2 font-serif font-bold text-center uppercase">
        <h3 class="mb-8 text-3xl">Historical</h3>
        <div class="flex flex-col items-center justify-center">
          <hr class="w-full border-2 border-cream">
          <h2 class="px-4 text-4xl -translate-y-1/2 bg-dark-oak">Reference</h2>
        </div>
      </div>
      <div class="text-center">
        <div class="text-lg paragraphs-container !text-cream mx-auto mb-8">
          {{#makeParagraphs historicalReference}}{{/makeParagraphs}}
        </div>
      </div>
    </section>
    {{/with}}

    {{!-- See other pieces section --}}
    <section class="py-10 section-container">
      <div class="relative mb-8 space-y-2 font-serif font-bold text-center uppercase">
        <h3 class="mb-8 text-3xl">Check Out The</h3>
        <div class="flex flex-col items-center justify-center">
          <hr class="w-full border-2 border-dark-oak">
          <h2 class="px-4 text-4xl -translate-y-1/2 bg-cream">other Pieces</h2>
        </div>
      </div>

      <div
        class="grid md:grid-cols-12 xl:grid-cols-6 md:[&>*:nth-child(5)]:!col-start-4 xl:[&>*:nth-child(4)]:!col-start-2 gap-10 lg:gap-0 xl:gap-10">
        {{#each otherPieces}}
        <div class="md:col-span-6 xl:col-span-2 lg:p-10 xl:p-0">
          <a href="/pieces/{{this.name}}"
            class="flex flex-col p-4 box-border bg-white aspect-square rounded-xl border-[1px] border-spruce w-2/3 md:w-full mx-auto md:mx-0">
            <div class="flex items-center mb-4">
              <div class="flex-1 space-y-2 font-serif font-bold uppercase text-dark-oak">
                <h5 class="text-2xl">The</h5>
                <h4 class="text-3xl">{{this.name}}</h4>
                <hr class="w-4/5 border-[1px] mt-1 border-oak">
              </div>
              <span class="text-6xl icon-{{this.id}}"></span>
            </div>
            <p class="mt-8 text-lg line-clamp-6 md:mt-auto">{{this.overview}}</p>
          </a>
        </div>
        {{/each}}
      </div>
    </section>
  </div>
</div>

