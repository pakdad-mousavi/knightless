<header class="mx-auto flex h-[4.5rem] bg-black text-cream font-sans">
  <div class="container flex flex-wrap items-center px-10 py-6 mx-auto lg:flex-nowrap">
    <div class="flex items-center flex-1">
      <a href="/" class="inline-flex items-center gap-2">
        <img src="/images/logo.svg" alt="A golden knight." class="w-8" style="max-width: 32px;">
        <h1 class="font-semibold font-serif uppercase text-birch !tracking-normal">Knightless</h1>
      </a>
    </div>
    <label for="menu-toggle" class="cursor-pointer lg:hidden">
      <svg class="text-gray-100 fill-current" width="20" height="20" viewBox="0 0 20 20">
        <title>menu</title>
        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
      </svg>
    </label>
    <input class="hidden" type="checkbox" id="menu-toggle" />
    <div class="z-10 hidden mt-6 rounded-md lg:block basis-full lg:basis-auto lg:mt-0 bg-black/50 backdrop-blur-md"
      id="menu">
      <ul class="flex flex-col items-center text-center gap-x-7 gap-y-2 lg:flex-row">
        <li
          class="relative w-full lg:w-auto mega-menu-panel group {{getCssClass pageCategory 'puzzles' 'active-header-item' ''}}">
          <a href="/daily-puzzle" class="header-item mega-menu-btn">
            <span>Puzzles</span>
            <span class="text-xs ms-2 icon-down-arrow"></span>
          </a>
          <hr class="hidden w-0 duration-200 lg:block group-hover:w-full">
          <ul class="mg-menu">
            <li><a href="/puzzle-forge">Puzzle Forge</a></li>
            <li><a href="/daily-puzzle">Daily Puzzle</a></li>
            <li><a href="/faq">Puzzle FAQ</a></li>
          </ul>
        </li>
        <li class="w-full lg:w-auto group {{getCssClass pageCategory 'hallOfFame' 'active-header-item' ''}}">
          <a href="/hall-of-fame" class="header-item">Hall Of Fame</a>
          <hr class="hidden w-0 duration-200 lg:block group-hover:w-full">
        </li>
        <li class="w-full lg:w-auto group {{getCssClass pageCategory 'attributions' 'active-header-item' ''}}">
          <a href="/attributions" class="header-item">Attributions</a>
          <hr class="hidden w-0 duration-200 lg:block group-hover:w-full">
        </li>
        <li class="w-full lg:w-auto group {{getCssClass pageCategory 'contactUs' 'active-header-item' ''}}">
          <a href="/contact" class="header-item">Contact Us</a>
          <hr class="hidden w-0 duration-200 lg:block group-hover:w-full">
        </li>
        <li class="w-full lg:w-auto xl:ml-20"><a href="/contact"
            class="header-item !px-6 !py-2 lg:!px-8 lg:!py-2 rounded-md lg:bg-ash lg:border-[1px] whitespace-nowrap lg:hover:bg-charcoal focus:!text-gray-200">About
            Us</a>
        </li>
        {{#if user}}
        <li class="w-full lg:w-auto">
          <a href="/profile"
            class="header-item lg:size-10 flex items-center justify-center lg:rounded-md lg:bg-ash lg:bg-contain lg:border-[1px] whitespace-nowrap lg:hover:bg-charcoal lg:border-birch lg:text-birch">
            <span class="lg:hidden">Profile</span>
            <span class="hidden text-2xl lg:block icon-knight"></span>
          </a>
        </li>
        {{else}}
        <li class="w-full lg:w-auto"><a href="/auth/login"
            class="header-item lg:!px-6 lg:!py-2 rounded-md lg:bg-ash lg:border-[1px] whitespace-nowrap lg:hover:bg-charcoal focus:!text-gray-200 lg:border-birch lg:text-birch">
            Sign In
          </a>
        </li>
        {{/if}}
      </ul>
    </div>
  </div>
</header>